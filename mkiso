#!/bin/bash 

. ./init-script 

echo "[*] Create stage1"
(cd stage1 ; find . | cpio -o -H newc | gzip -9c > ../image/boot/stage1.gz) 2> /dev/null 

echo "[*] Create iso" 
(cd image ; mkisofs -o ../jos.iso -b boot/isolinux.bin -c boot/boot.cat -no-emul-boot -boot-load-size 4 -boot-info-table -J -R -V "JOS" .) 2> /dev/null
